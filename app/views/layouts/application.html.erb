<!DOCTYPE html>
<html>
  <head>
    <title>NoBookNoLife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="row">
          <div class="col-xs-1">
            <h3><%= link_to 'NoBookNoLife', root_path %></h3>
          </div>
          <ul class="header-menu">
            <li></li>

            <% if user_signed_in? %>
              <div class="col-xs-2">
                <span><%= link_to 'マイページ', user_path %></span>
              </div>
              <div class="col-xs-2">
                <span><%= link_to 'プロフィール編集', edit_user_registration_path %></span>
              </div>
              <div class="col-xs-2">
                <span><%= link_to '本棚', reading_books_path %></span>
              </div>
              <div class="col-xs-2">
                <span><%= link_to 'ログアウト', destroy_user_session_path %></span>
              </div>
            <% else %>
              <div class="col-xs-2">
                <span><%= link_to 'アバウト', books_about_path %></span>
              </div>
              <div class="col-xs-2">
                <span><%= link_to '新規登録', new_user_registration_path %></span>
              </div>
              <div class="col-xs-2">
                <span><%= link_to 'ログイン', user_session_path %></span>
              </div>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="search-bar">



        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
