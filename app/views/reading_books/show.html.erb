<div class="Book-Shelf-form">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/userinfo', user: @user %>
			</div>

			<div class="col-xs-9">
				<div class="row">
					<div class="book-shelf">
						<% @readings.each do |reading| %>
							<div class="col-xs-2">
								<div class="book-shelf-item-image">
									<%= link_to books_path(search: Book.find_by(id: reading[:book_id])[:isbn]) do %>
										<%= image_tag get_json_from_isbn(Book.find_by(id: reading[:book_id])[:isbn])["items"][0]["volumeInfo"]["imageLinks"]["smallThumbnail"], :size =>'128x182' %>
									<% end %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

